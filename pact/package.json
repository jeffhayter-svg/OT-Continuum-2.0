{
  "name": "@ot-continuum/pact-tests",
  "version": "1.0.0",
  "description": "Consumer-driven contract tests using Pact",
  "private": true,
  "type": "module",
  "scripts": {
    "test:consumer": "jest --testMatch='**/consumer/**/*.pact.test.ts' --runInBand",
    "test:consumer:signals": "jest --testMatch='**/consumer/signals.consumer.pact.test.ts'",
    "test:consumer:risk": "jest --testMatch='**/consumer/risk.consumer.pact.test.ts'",
    "test:consumer:workflow": "jest --testMatch='**/consumer/workflow.consumer.pact.test.ts'",
    "test:provider": "jest --testMatch='**/provider/**/*.pact.test.ts' --runInBand",
    "test:provider:workflow": "jest --testMatch='**/provider/workflow.provider.pact.test.ts'",
    "test:all": "npm run test:consumer && npm run test:provider",
    "pact:publish": "node scripts/publish-pacts.js",
    "pact:can-deploy": "node scripts/can-deploy.js",
    "pact:verify": "npm run test:provider",
    "clean": "rm -rf pacts logs",
    "ci:consumer": "npm run clean && npm run test:consumer && npm run pact:publish",
    "ci:provider": "npm run test:provider"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^12.1.0",
    "@pact-foundation/pact-node": "^10.17.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {
        "useESM": true
      }]
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "testTimeout": 30000
  }
}
